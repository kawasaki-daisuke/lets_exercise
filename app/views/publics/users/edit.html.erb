<h1>ユーザー編集</h1>
<%= form_for(@user, url: publics_user_path) do |f| %>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :性別 %>
    <%= f.radio_button :gender, :male %>
    <%= f.label :gender, "男性" %>
    <%= f.radio_button :gender, :female %>
    <%= f.label :gender, "女性" %>
  </div>

  <div class="field">
    <%= f.label :プロフィール画像 %>
    <%= f.file_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :身長 %><br />
    <%= f.text_field :tall %>
  </div>

  <div class="field">
    <%= f.label :体重 %><br />
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>

