<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-5">

    <h2>会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name %>
      </div>

      

      <div class="field">
        <%= f.label :プロフィール画像 %>
        <%= f.file_field :profile_image %>
      </div>

      <div class="field">
        <%= f.label :身長 %><br />
        <%= f.text_field :tall %>
      </div>

      <div class="field">
        <%= f.label :体重 %><br />
        <%= f.text_field :weight %>
      </div>

      <div class="field">
        <%= f.label :通っているジム %><br />
        <%= f.text_field :gym %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
       
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    </div>
  </div>
</div>